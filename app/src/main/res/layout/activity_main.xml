        android:text="业务一"
        android:id="@+id/btn_business_one"
        android:layout_height="40dp" />
    <Button
        android:layout_width="match_parent"
        android:text="业务二"
        android:id="@+id/btn_business_two"
        android:layout_height="40dp" />
    <Button
        android:layout_width="match_parent"
        android:text="业务三"
        android:id="@+id/btn_business_three"
        android:layout_height="40dp" />
